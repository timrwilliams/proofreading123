                </div>
                <%= image_tag("plugins/horizontal-parallax/kite.png", class: "kite", alt: "Kite") %>
            </li>
        </ul>
    </div>
</div><!--/sequence-theme-->
<!--=== End Slider ===-->

<!--=== Purchase Block ===-->
<div class="purchase">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <span>Proofreading123 is the UK's premier English language proofreading service.</span>
                <p>Our team of dedicated proofreading professionals are waiting to receive your document now. We offer a fast, affordable service with a 100% money back guarantee if you are not satisfied.</p>
            </div>            
            <div class="col-md-3">
            <!--Horizontal Form-->
            <div class="panel panel-green">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="icon-shopping-cart"></i> Quick Quote</h3>
                </div>
                <div class="panel-body">                                                      
                <%= form_tag("/order", method: "get", class:"form-horizontal") do %>
                        <div class="form-group">
                            <label for="inputWordCount" class="col-md-6 control-label">Word Count</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="inputWordCount" placeholder="0" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPrice" class="col-md-6 control-label">Price</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="inputPrice" placeholder="£0.00" readonly="true">
                            </div>
                        </div>                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn-u btn-large btn-u-green">Order Now</button>
                            </div>
                        </div>
                        <div id="turnaround">
                        </div>
                    <% end %>
                </div>
            </div>
            <!--End Horizontal Form-->
            </div>
        </div>
    </div>
</div><!--/row-->
