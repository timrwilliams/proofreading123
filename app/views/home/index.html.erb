<script type="text/javascript">
jQuery(document).ready(function() {
    $( "#inputWordCount" ).bind("change paste keyup", function() {
        wordCount = $(this).val();
        price = PriceCalculator.price(wordCount);
        time = TimeCalculator.calc(wordCount);
        formattedTime = TimeCalculator.format(time)
        turnaround = "";
        if(formattedTime){
            turnaround = formattedTime +" turnaround guaranteed!";
        }
        $("#inputPrice").val(price);
        $("#turnaround").html(turnaround);
    });
    
    });

</script>