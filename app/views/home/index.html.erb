<div id="sequence-theme" class="sequence-inner">
    <div id="sequence">
        <%= image_tag("plugins/horizontal-parallax/bt-prev1.png", class:"prev", alt:"Previous") %>
        <%= image_tag("plugins/horizontal-parallax/bt-next1.png", class:"next", alt:"Next") %>
        
